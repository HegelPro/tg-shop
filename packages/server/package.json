{
  "name": "typescript-graphql",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc && npm run build:schema",
    "build:schema": "ts-node src/schema/index.ts",
    "generate": "npm -s run generate:prisma",
    "generate:prisma": "prisma generate"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@pothos/core": "^4.2.0",
    "@pothos/plugin-errors": "^4.2.0",
    "@pothos/plugin-prisma": "^4.2.1",
    "@prisma/client": "5.19.0",
    "fastify": "^4.28.0",
    "grammy": "^1.14.1",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.1",
    "graphql-yoga": "^5.4.0",
    "hegel-tg-store-client": "file:../client"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/node-fetch": "^2.6.11",
    "prisma": "^5.19.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.2"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
